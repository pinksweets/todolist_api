{
  "name": "todolist_api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/pinksweets/todolist_api.git",
  "author": "torysmint@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "build": "npm run lint && tsc",
    "test": "jest --forceExit",
    "test_w": "jest --watchAll",
    "coverage": "jest --coverage --watchAll",
    "mocha": "mocha --compilers ts:ts-node/register test/**/*.ts --require espower-ts-node",
    "lint": "tslint -c tslint.json -p tsconfig.json --type-check",
    "api": "aglio -i ./api/todolist.md -o ./api/todolist.html"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "__TS_CONFIG__": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "body-parser": "^1.18.1",
    "express": "^4.15.4",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.11",
    "morgan": "^1.8.2",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/assert": "^0.0.31",
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.37",
    "@types/jest": "^20.0.8",
    "@types/mongodb": "^2.2.11",
    "@types/mongoose": "^4.7.21",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.28",
    "@types/supertest": "^2.0.3",
    "espower-typescript": "^8.1.1",
    "jest": "^21.1.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-microsoft-contrib": "^5.0.1"
  }
}
